# ==========================================
# DebridUI Environment Configuration
# ==========================================
# Copy to .env.local and fill in your values.
# Variables prefixed with # are optional.

# ==========================================
# Database
# ==========================================

# PostgreSQL connection string (local development only)
# In production, Hyperdrive provides the connection via wrangler.jsonc binding.
DATABASE_URL="postgresql://user:password@host:5432/dbname?sslmode=require"

# ==========================================
# Authentication (Neon Auth)
# ==========================================

# Cookie encryption key (generate: openssl rand -base64 32)
# In production, set via: bunx wrangler secret put NEON_AUTH_COOKIE_SECRET
NEON_AUTH_COOKIE_SECRET=""

# Neon Auth endpoint URLs
NEXT_PUBLIC_NEON_AUTH_URL="https://your-endpoint.neonauth.region.aws.neon.tech/dbname/auth"
NEON_AUTH_BASE_URL="https://your-endpoint.neonauth.region.aws.neon.tech/dbname/auth"

# ==========================================
# Application
# ==========================================

# Public URL where the app is served
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_URL="http://localhost:3000"

# ==========================================
# External Services
# ==========================================

# CORS proxy URL for Stremio addon requests
# Deploy proxy.worker.js to Cloudflare Workers, then set the URL here
NEXT_PUBLIC_CORS_PROXY_URL="https://your-cors-proxy.workers.dev/?url="

# Trakt.tv client ID for media discovery (https://trakt.tv/oauth/applications)
NEXT_PUBLIC_TRAKT_CLIENT_ID="79ee7788bc9c0db05db539da4aa19b8f76dd54a8aa0c4742a3228c7dd9cef71e"

# Trakt.tv client secret (server-side only, for OAuth scrobble)
# Get from: https://trakt.tv/oauth/applications → your app → Client Secret
TRAKT_CLIENT_SECRET=""

# ==========================================
# Optional
# ==========================================

# Discord community invite URL (shown in UI if set)
# NEXT_PUBLIC_DISCORD_URL=""

# Disable email/password signup (set to "true" for Google OAuth only)
# NEXT_PUBLIC_DISABLE_EMAIL_SIGNUP="false"

# Analytics script URL
# NEXT_PUBLIC_ANALYTICS_SCRIPT=""
