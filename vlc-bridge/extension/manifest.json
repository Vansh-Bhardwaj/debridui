{
  "manifest_version": 3,
  "name": "Debrid VLC Bridge",
  "version": "0.1.0",
  "description": "Control VLC media player from DebridUI â€” playback controls, subtitle management, and progress sync.",
  "homepage_url": "https://github.com/Vansh-Bhardwaj/debridui",
  "permissions": [
    "storage",
    "alarms",
    "downloads"
  ],
  "host_permissions": [
    "http://127.0.0.1:8080/*",
    "http://localhost:8080/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://localhost/*",
        "http://localhost:3000/*",
        "https://*.vercel.app/*",
        "https://debrid.indevs.in/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "http://localhost:3000/*",
      "https://*.vercel.app/*",
      "https://debrid.indevs.in/*"
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "VLC Bridge"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "120"
}
